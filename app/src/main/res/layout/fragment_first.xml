<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/lightYellow"
    tools:context=".FirstFragment">

    <com.google.android.material.appbar.MaterialToolbar
        android:id="@+id/fragmentToolBar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:title="@string/toolBarTitle"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"/>

    <com.google.android.material.textfield.TextInputEditText
        android:id="@+id/materialFragment1EditText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:hint="@string/fragment1EditTextHint"
        android:textSize="25sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/fragmentToolBar" />

    <com.google.android.material.button.MaterialButton
        android:id="@+id/materialFragment1Button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/fragment1button"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/materialFragment1EditText" />

</androidx.constraintlayout.widget.ConstraintLayout>